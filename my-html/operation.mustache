<div class="main-content">
    <h2><a name="{{className}}"></a>{{className}}</h2>

    {{#operations}}
        {{#operation}}
            <hr>
            <h3><a name="{{nickname}}"></a>{{ summary }}</h3>

            <p>{{description}}</p>
            {{#notes}}<p>{{notes}}</p>{{/notes}}
            <h4 class="section">URL</h4>
            <code>{{basePath}}{{path}}</code>
            <h4 class="section">HTTP Method</h4>
            <code>{{httpMethod}}</code>
            <h4 class="section">Parameters</h4>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Required</th>
                    <th>Schema</th>
                    <th>Default</th>
                </tr>
                {{#allParams}}
                    <tr>
                        <td class="parameter">
                            {{#isFormParam}}<span class="param-in">Form </span>{{/isFormParam}}
                            {{#isQueryParam}}<span class="param-in">Query </span>{{/isQueryParam}}
                            {{#isPathParam}}<span class="param-in">Path </span>{{/isPathParam}}
                            {{#isHeaderParam}}<span class="param-in">Header </span>{{/isHeaderParam}}
                            {{#isBodyParam}}<span class="param-in">Body </span>{{/isBodyParam}}
                        </td>
                        <td class="param-name">{{baseName}}</td>
                        <td>
                            <p class="param-description">{{description}}</p>
                        </td>
                        <td>
                            {{#optional}}<span class="param-optional-flag">(optional)</span>{{/optional}}
                        </td>
                        <td>
                            <span class="param-type">
                                {{dataType}}
                                {{#baseType}}
                                    (<a href="#!/models#{{baseType}}">{{baseType}}</a>)
                                {{/baseType}}
                            </span>
                        </td>
                        <td>
                            {{default}}
                        </td>
                    </tr>
                {{/allParams}}
            </table>

            <h4 class="section">Responses</h4>

            <table class="table table-striped table-bordered">
                <colgroup>
                    <col style="width: 33%;">
                    <col style="width: 33%;">
                    <col style="width: 33%;">
                </colgroup>
                <thead>
                <tr>
                    <th>HTTP Code</th>
                    <th>Description</th>
                    <th>Schema</th>
                </tr>
                </thead>
                <tbody>
                {{#responses}}
                    <tr>
                        <td class="parameter"><p>{{code}}</p></td>
                        <td class="parameter"><p>{{message}}</p></td>
                        <td class="parameter">
                            <span class="parameter">
                                {{#baseType}}
                                    <a href="#!/models#{{baseType}}">{{baseType}}</a>
                                {{/baseType}}
                                {{^baseType}}
                                    {{dataType}}
                                {{/baseType}}
                            </span>
                        </td>
                    </tr>
                {{/responses}}
                </tbody>
            </table>
        {{/operation}}
    {{/operations}}
</div>
