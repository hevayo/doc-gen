<div class="main-content">
    <h1>{{classname}}</h1>

    {{#operations}}
        {{#operation}}
            <hr/>
            <h3 class="operation-heading">{{ summary }}</h3>

            <p class="marked">{{description}}</p>
            {{#notes}}<p class="marked">{{notes}}</p>{{/notes}}
            <h4 class="section-heading">URL</h4>
            <code>{{basePath}}{{path}}</code>
            <h4 class="section-heading">HTTP Method</h4>
            <code>{{httpMethod}}</code>
            <h4 class="section-heading">Parameters</h4>
            <table class="table table-striped table-bordered">
                <colgroup>
                    <col style="width: 5%;">
                    <col style="width: 20%;">
                    <col style="width: 40%;">
                    <col style="width: 5%;">
                    <col style="width: 10%;">
                    <col style="width: 20%;">
                </colgroup>
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Required</th>
                    <th>Schema</th>
                    <th>Default</th>
                </tr>
                </thead>
                {{#allParams}}
                    <tr>
                        <td class="parameter">
                            {{#isFormParam}}<span class="param-in">Form </span>{{/isFormParam}}
                            {{#isQueryParam}}<span class="param-in">Query </span>{{/isQueryParam}}
                            {{#isPathParam}}<span class="param-in">Path </span>{{/isPathParam}}
                            {{#isHeaderParam}}<span class="param-in">Header </span>{{/isHeaderParam}}
                            {{#isBodyParam}}<span class="param-in">Body </span>{{/isBodyParam}}
                        </td>
                        <td class="param-name">{{baseName}}</td>
                        <td>
                            <p class="param-description marked">{{description}}</p>
                        </td>
                        <td>
                            {{#required}}<span class="param-required">{{required}}</span>{{/required}}
                            {{^required}}<span class="param-required">false</span>{{/required}}
                        </td>
                        <td>
                            <span class="param-type">
                                {{dataType}}
                                {{#baseType}}
                                    (<a href="#!/models#{{baseType}}">{{baseType}}</a>)
                                {{/baseType}}
                            </span>
                        </td>
                        <td>
                            <p class="marked">{{defaultValue}}</p>
                        </td>
                    </tr>
                {{/allParams}}
            </table>

            <h4 class="section-heading">Responses</h4>

            <table class="table table-striped table-bordered">
                <colgroup>
                    <col style="width: 33%;">
                    <col style="width: 33%;">
                    <col style="width: 33%;">
                </colgroup>
                <thead>
                <tr>
                    <th>HTTP Code</th>
                    <th>Description</th>
                    <th>Schema</th>
                </tr>
                </thead>
                <tbody>
                {{#responses}}
                    <tr>
                        <td class="parameter"><p class="marked">{{code}}</p></td>
                        <td class="parameter"><p class="marked">{{message}}</p></td>
                        <td class="parameter">
                            <span class="parameter">
                                {{#baseType}}
                                    <a href="#!/models#{{baseType}}">{{baseType}}</a>
                                {{/baseType}}
                                {{^baseType}}
                                    {{dataType}}
                                {{/baseType}}
                            </span>
                        </td>
                    </tr>
                {{/responses}}
                </tbody>
            </table>
        {{/operation}}
    {{/operations}}
</div>
